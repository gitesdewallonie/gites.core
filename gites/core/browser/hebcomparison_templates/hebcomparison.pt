<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en" lang="en"
      i18n:domain="gites">
<head>
    <script type="text/javascript"
            charset="utf-8"
            src=""
            tal:attributes="src string:${context/@@plone_portal_state/portal_url}/++resource++prototype16.js"></script>

    <script type="text/javascript"
            charset="utf-8"
            src=""
            tal:attributes="src string:${context/@@plone_portal_state/portal_url}/++resource++gitetimeframe.js"></script>

    <script type="text/javascript"
            charset="utf-8"
            tal:content="view/calendarJS"></script>

    <link rel="stylesheet" href="" type="text/css" media="screen" title="timeframe" charset="utf-8"
          tal:attributes="href string:${context/@@plone_portal_state/portal_url}/++resource++timeframe.css"/>
</head>
<body>
<style>
.center { text-align: center; }
td.comparison-4 { width: 181px; }
td.comparison-3 { width: 241px; }
td.comparison-2 { width: 362px; }
.icons-on table.comparison td {
  line-height: 1em;
  padding: 3px 3px;
}
table.comparison {
  border: none;
  width: 100%;
}
table.comparison thead { display: none; }
table.comparison tbody tr.header td.description {
  background-color: #FFF;
}
table.comparison tbody tr.header td {
  color: #222222;
  font-family: 'Josefin Sans','Helvetica Neue',Arial,FreeSans,sans-serif;
  font-size: 1.2em;
  text-shadow: 1px 1px 1px rgba(250, 250, 250, 0.5);
  padding: 10px 3px;
}
table.comparison tbody tr.header td.gite  {
  background-color: rgba(210, 254, 255, 0.3);
  background-image: url("/++theme++gites.theme/images/bg_listing_gite.png");
  color: #265902;
}
table.comparison tbody tr.header td.chambre {
  background-color: rgba(210, 254, 255, 0.3);
  background-image: url("/++theme++gites.theme/images/bg_listing_chambre.png");
  color: #00336A;
}
table.comparison span.icon {
  font-family: 'Josefin Sans','Helvetica Neue',Arial,FreeSans,sans-serif;
  font-weight: bold;
  font-size: 1.8em;
  text-shadow: 1px 1px 1px #666;
}
table.comparison span.false { color: #CF000E; }
table.comparison span.true { color: #265902; }

table.comparison td div.timeframe_calendar caption {
  display: block;
  width: 100%;
}
table.comparison td div.timeframe_calendar thead,
table.comparison td div.timeframe_calendar tbody {
  display: block;
}
table.comparison td div.timeframe_calendar div.timeframe_menu {
  margin: 5px 0;
}
table.comparison td div.timeframe_calendar td,
table.comparison td div.timeframe_calendar th {
  background-color: #FFF;
  text-align: center;
  border: none;
  padding: 2px 1px;
}
table.comparison td div.timeframe_calendar th {
  background: none repeat scroll 0 0 #222222;
  color: #EEEEEE;
}
table.comparison td div.timeframe_calendar td.indisp {
  background-color: red;
}
table.comparison td div.timeframe_calendar td.unselectable,
table.comparison td div.timeframe_calendar td.beyond {
  background-color: #AAA;
}
</style>
<div class="comparator">
  <div tal:content="structure view/get_table" />
</div>
</body>

</html>
