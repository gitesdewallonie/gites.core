<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en" lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="gites">
<head>
</head>
<body>
<div metal:fill-slot="main"
     tal:define="validation view/validate">

  <tal:block condition="validation">
    <form method="POST" tal:define="dummy view/apply_tarifs_changes">
      <div tal:content="structure view/get_table" />

      <input type="hidden" name="tarif_heb_pk" tal:attributes="value request/heb_pk" />
      <input type="submit" value="Appliquer les changements" />
    </form>
  </tal:block>

  <tal:block condition="not: validation">
    <div class="error" tal:content="view/error" />
  </tal:block>

</div>
</body>

</html>
