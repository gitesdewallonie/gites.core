<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<div metal:fill-slot="main">

    <div id="viewlet-above-content" tal:content="structure provider:plone.abovecontenttitle" />
    <h1 i18n:domain="gites" i18n:translate="idees_sejours">
        Idées séjours
    </h1>
        <a href=""
           class="link-parent"
           tal:define="parent_url python:here.navigationParent(here, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">
        Up one level
        </a>

        <p class="documentDescription"
           tal:content="here/Description"
           tal:condition="here/Description">
            Description
        </p>

      <div id="idee_sejours_container"
           tal:define="package view/getPackages">
        <fieldset tal:repeat="brain package">
          <div tal:define="packageObject python:brain.getObject()"
               class="div_idee_sejours">
            <p tal:define="packageObjectUrl python: '/'.join(packageObject.getPhysicalPath());
                           vignette python:view.getVignette(packageObjectUrl)"
               class="logo-package">
                  <a href="" tal:attributes="href packageObject/absolute_url" tal:condition="vignette">
                     <img src="" tal:attributes="src string:${vignette/getURL}/image_thumb"/><br />
                  </a>
            </p>

            <div class="info">
               <a href="" tal:attributes="href packageObject/absolute_url">
                  <span class="title" tal:content="packageObject/Title"/>
                  <span class="description">
                      <p tal:content="structure packageObject/Description"/>
                  </span>
               </a>
             </div>
          </div>
        </fieldset>
      </div>

</div>

</body>
</html>
