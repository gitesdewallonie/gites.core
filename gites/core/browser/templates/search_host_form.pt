<div id="recherche-avancee"
     i18n:domain="gites">
    <div class="break-float"></div>

    <form action=""
          method="post"
          tal:attributes="action string:${context/@@plone_portal_state/portal_url}/moteur_recherche_view/getBasicSearch">
        <tal:block replace="structure view/widgets/hebergementType/label" />
        <div id="zone-gite-meuble">
            <input type="checkbox"
                   name="form.widgets.hebergementType:list"
                   id="gite-meuble"
                   tal:attributes="checked view/selected_gite"
                   value="gite-meuble"/>
            <label for="gite-meuble"
                   i18n:translate="gites_et_meubles">G&icirc;tes et meubl&eacute;s</label>
        </div>
        <div id="zone-chambre-hote">
            <input type="checkbox"
                   name="form.widgets.hebergementType:list"
                   tal:attributes="checked view/selected_chambre"
                   id="chambre-hote"
                   value="chambre-hote" />
            <label for="chambre-hote"
                   i18n:translate="chambre_hotes">Chambre d'h&ocirc;tes</label>
        </div>
        <div class="break-float"></div>
        <div id="date-start" tal:define="widget view/widgets/fromDate">
            <tal:block replace="structure widget/label" />
            <tal:block replace="structure widget/render" />
        </div>
        <div id="date-end" tal:define="widget view/widgets/toDate">
            <tal:block replace="structure widget/label" />
            <tal:block replace="structure widget/render" />
        </div>
        <div id="nbre-personne" tal:define="widget view/widgets/capacityMin">
            <tal:block replace="structure widget/label" />
            <tal:block replace="structure widget/render" />
        </div>
        <div class="break-float"></div>
        <div id="proximite"
             tal:define="lang request/LANGUAGE | fr">
            <tal:block replace="structure view/widgets/nearTo/label" />
            <input name="form.widgets.nearTo"
                   type="text"
                   autocomplete="off"
                   class=""
                   tal:attributes="class string:geocode_autocomplete_${lang}"
                   i18n:attributes="placeholder a_proximite_de"
                   placeholder="A proximité de"/>
        </div>
        <div id="classification" tal:define="widget view/widgets/classification">
            <tal:block replace="structure widget/label" />
            <tal:block replace="structure widget/render" />
        </div>
        <div id="roomAmount" tal:define="widget view/widgets/roomAmount">
            <tal:block replace="structure widget/label" />
            <tal:block replace="structure widget/render" />
        </div>

        <div id="zone-smokers">
            <input type="checkbox"
                   name="form.widgets.smokers"
                   id="smokers"/>
            <label for="smokers"
                   i18n:translate="fumeurs_autorises">Fumeurs autorisés</label>
        </div>
        <div id="zone-animals">
            <input type="checkbox"
                   name="form.widgets.animals"
                   id="animals"/>
            <label for="animals"
                   i18n:translate="animaux_autorises">Animaux autorisés sur demande</label>
        </div>
        <div>
            <input type="submit"
                   value="Je trouve"
                   class="trouver"
                   i18n:attributes="value je_trouve" />
        </div>
    </form>
</div><!--je cherche-->
