<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<div metal:fill-slot="main">
  <tal:main>
    <div id="viewlet-above-content" tal:content="structure provider:plone.abovecontenttitle" />
    <h1 i18n:translate="heading_sejour_fute">
        <span i18n:name="sitename" tal:omit-tag="" tal:content="here/Title">Portal title</span>
      </h1>
    <div metal:use-macro="here/document_actions/macros/document_actions">
        Document Actions
    </div>

        <a href=""
           class="link-parent"
           tal:define="parent_url python:here.navigationParent(here, template_id)"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">
        Up one level
        </a>

    <div class="stx"
         tal:define="text python: here.description"
         tal:condition="text"
         tal:attributes="class python:here.Format() in ('text/structured',
                                               'text/x-rst', ) and 'stx' or 'plain'">
        <div tal:replace="structure text" />
    </div>

      <div class="idee_sejours_container">
        <fieldset tal:repeat="sejour view/getAvailableSejourInFolder">
           <div tal:define="sejour_url python: '/'.join(sejour.getPhysicalPath());
                            vignette python:view.getRandomVignette(sejour_url)"
                 id="div_idee_sejours">
            <p id="logo"
               tal:condition="vignette">
               <a href=""
                  tal:define="vign python:vignette[0]"
                  tal:condition="vign"
                  tal:attributes="href sejour/absolute_url">
                   <img src="" tal:attributes="src string:${vign/getURL}/image_thumb"/><br />
               </a>
            </p>

            <div id="info">
              <a href="" tal:attributes="href sejour/absolute_url">
                  <span id="title" tal:content="sejour/Title"/>
                  <span id="description">
                      <p tal:content="structure sejour/Description"/>
                  </span>
              </a>
            </div>
           </div>
        </fieldset>
      </div>

  </tal:main>
</div>

</body>
</html>
