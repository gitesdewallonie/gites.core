<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="gites">

<body >

<div metal:fill-slot="main">
    <div id="viewlet-above-content" tal:content="structure provider:plone.abovecontenttitle" />
    <h1 i18n:translate="dernieres_minutes">
        Dernières minutes
    </h1>

  <br /><br />
  <div class="lastminute-fieldset-container">
    <div id="dernieres-minute-listing">
        <h2 i18n:translate="dernieres_minutes">Dernières minutes</h2>
        <center tal:define="lastminutes view/getLastDernieresMinutes">
           <metal:macro
                    use-macro="here/hebergement_macro/macros/lastminutes_table" />
         </center>

    </div>

    <div id="promotion-listing">
        <h2 i18n:translate="promotions">Promotions</h2>
        <center tal:define="promotions view/getLastPromotions">
           <metal:macro
                    use-macro="here/hebergement_macro/macros/promotions_table" />
          </center>

    </div>

    <div id="nouveaux-hebergement-listing">
        <h2 i18n:translate="nouveaux_hebergements">Nouveaux hebergements</h2>
        <center tal:define="hebergements view/getLastHebergements">
           <metal:macro
                    use-macro="here/hebergement_table/macros/hebergement_table" />
        </center>

    </div>

  </div>
</div>
</body>
</html>
