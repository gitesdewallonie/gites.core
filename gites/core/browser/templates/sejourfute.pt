<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="gites">
<body>

  <div metal:fill-slot="main"
    tal:define="text context/getText;
                path python:'/'.join(context.getPhysicalPath())">
        <h1 tal:content="object_title" class="documentFirstHeading">
          Title or id
        </h1>
    <div metal:use-macro="here/document_actions/macros/document_actions"/>
        <p class="documentDescription"
           tal:content="here/Description"
           tal:condition="here/Description">
            Description
        </p>
        <div class="stx"
             tal:condition="text"
             tal:attributes="class python:here.Format() in ('text/structured', 'text/x-rst', ) and 'stx' or 'plain'">
            <div tal:replace="structure text" />
            </div>
            <br/>
            <span class="visualClear">
              <div tal:define="hebergements view/getHebergements;
                               number python:len(hebergements);">
                <h1 tal:condition="python:number>1" i18n:translate="gites_a_proximite"><span i18n:name="number" tal:replace="number"/> Gites et Chambres d'hôtes à proximité </h1>
                <h1 tal:condition="python:number<1" i18n:translate="gite_a_proximite"><span i18n:name="number" tal:replace="number"/> Gite ou Chambre d'hôtes à proximité </h1>
                <span i18n:translate="selectionnez_titre_pour_trier">Sélectionnez le titre d'une colonne pour trier les résultats.</span>
                <!-- listing des hebergement concerne -->
                <center>
                  <metal:macro use-macro="here/hebergement_table/macros/hebergement_table" />
                </center>
              </div>
        </div>
</body>
</html>
