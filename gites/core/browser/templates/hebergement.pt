<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="gites">
<body>
    <metal:block fill-slot="style_slot">
        <link rel="stylesheet"
              href="++resource++timeframe.css"
              type="text/css"
              media="screen"
              title="timeframe"
              charset="utf-8" />

        <script type="text/javascript"
                charset="utf-8"
                src="++resource++prototype16.js"></script>

        <script type="text/javascript"
                charset="utf-8"
                src="++resource++gitetimeframe.js"></script>

        <script type="text/javascript"
                charset="utf-8"
                tal:condition="view/showCalendar"
                tal:content="view/calendarJS"></script>

        <script type="text/javascript"
                src=""
                charset="utf-8"
                tal:attributes="src string:${here/portal_url}/++theme++gites.theme/accordeon/jquery.accordionza.min.js"></script>

        <script type="text/javascript"
                src=""
                charset="utf-8"
                tal:attributes="src string:${here/portal_url}/++theme++gites.theme/accordeon/script.js"></script>
    </metal:block>
<div metal:fill-slot="main">
    <div tal:replace="structure provider:plone.abovecontenttitle" />
    <div tal:replace="structure provider:plone.belowcontenttitle" />
    <div tal:replace="structure provider:plone.abovecontentbody" />
    <div id="content-core">
        <div id="description-heb"
             tal:define="heb context; hebergementIcons context/@@hebergement_icons; redirection view/redirectInactive;">
            <!-- Bannière titre + info -->
            <div id="description-info-sup">
                <div id="nom-heb">
                    <span tal:content="heb/heb_nom" />
                </div>
                <div id="nbre-cle"
                     class="etiquette-sup"
                     tal:condition="python:heb.type.type_heb_code == 'MV'"
                     i18n:translate="nbre-cle">
                    <tal:for repeat="epis heb/epis">
                        <span tal:content="epis/heb_nombre_epis" />
                    </tal:for>
                    <tal:if condition="python:len(heb.epis)==0">
                        <span>-</span>
                    </tal:if>
                    Clés
                </div>
                <div id="nbre-epis"
                     class="etiquette-sup"
                     tal:condition="python:heb.type.type_heb_code != 'MV'"
                     i18n:translate="nbre-epis">
                    <tal:for repeat="epis heb/epis">
                        <span tal:content="epis/heb_nombre_epis" />
                    </tal:for>
                    <tal:if condition="python:len(heb.epis)==0">
                        <span>-</span>
                    </tal:if>
                    Epis
                </div>
                <div id="nbre-personne"
                     class="etiquette-sup"
                     i18n:translate="nbre-personne">
                    <span tal:content="string: ${heb/heb_cgt_cap_min}/${heb/heb_cgt_cap_max}" />
                    personnes
                </div>
                <div id="nbre-chambre"
                     class="etiquette-sup"
                     i18n:translate="nbre-chambre">
                    <span tal:content="heb/heb_cgt_ nbre_chmbre" />
                    Chambres
                </div>
                <div id="nbre-lit-1-personne"
                     class="etiquette-sup"
                     i18n:translate="nbre-lit-1-personne">
                    <span tal:content="heb/heb_lit_1p" />
                    Lit 1 personne
                </div>
                <div id="nbre-lit-2-personne"
                     class="etiquette-sup"
                     i18n:translate="nbre-lit-2-personne">
                    <span tal:content="heb/heb_lit_2p" />
                    Lit 2 personnes
                </div>
                <div id="nbre-lit-enfant"
                     class="etiquette-sup"
                     i18n:translate="nbre-lit-enfant">
                    <span tal:content="heb/heb_lit_enf" />
                    Lit enfant
                </div>
                <div id="reference"
                     class="etiquette-sup"
                     i18n:translate="reference">
                    <span tal:content="heb/heb_pk" />
                    Référence
                </div>
                <br />
                <!--
                <div style="display: table-cell;">
                    Thèmes
                    <br />
                    <tal:repeat repeat="theme python:view.getHebMetadatasByType('themes')">
                        <span tal:content="theme/title" />
                    </tal:repeat>
                </div>
                -->
                <div class="break-float"></div>
            </div><!--info-sup-->

            <ul id="descriptif-accordeon">
                <!-- ACCUEIL -->
                <li class="slide1">
                    <div class="slide_handle"><div></div></div>
                    <div class="slide_content">
                        <h2>Accueil</h2>
                    <div style="display:table; table-layout:fixed;">
                          <div style="display: table-cell;">
                            <img src=""
                                 tal:attributes="src string:${here/photos_heb/absolute_url}/${heb/heb_code_gdw}00.jpg" />
                          </div>
                          <div style="display: table-cell;"
                               tal:condition="view/showCalendar">
                            <div id="calendars"></div>
                            <input type="hidden"
                                   id="reset" />
                            <input type="hidden"
                                   name="start"
                                   value=""
                                   id="start" />
                            <input type="hidden"
                                   name="end"
                                   value=""
                                   id="end" />
                    </div>

                    <!--TABLE TARIFICATION GITES-->
                    <div tal:condition="python:heb.type.type_heb_code not in 'CH, MH, CHECR'">
                        <table id="tarification-gite">
                            <tr>
                               <td align="center"><span>Période</span></td>
                               <td align="center"><span>WE</span></td>
                               <td align="center"><span>Semaine</span></td>
                            </tr>
                            <tr>
                                <td>&nbsp;&nbsp; <span>Basse saison</span></td>
                                <td align="center" bgcolor="#ACE087">
                                    <span tal:content="heb/heb_tarif_we_bs" />
                                </td>
                                <td align="center" bgcolor="#8BBE67">
                                     <span tal:content="heb/heb_tarif_sem_bs" />
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;&nbsp; <span>Moyenne saison</span></td>
                                <td align="center" bgcolor="#ACE087">
                                    <span tal:content="heb/heb_tarif_we_ms" />
                                </td>
                                <td align="center" bgcolor="#8BBE67">
                                     <span tal:content="heb/heb_tarif_sem_ms" />
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;&nbsp; <span>Haute saison</span></td>
                                <td align="center" bgcolor="#ACE087">
                                     <span tal:content="heb/heb_tarif_we_hs" />
                                </td>
                                <td align="center" bgcolor="#8BBE67">
                                     <span tal:content="heb/heb_tarif_sem_hs" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">&nbsp;</td>
                            </tr>
                            <tr>
                                <td>&nbsp;&nbsp; <span>WE de fête 3 nuits</span></td>
                                <td align="center" bgcolor="#ACE087">
                                     <span tal:content="heb/heb_tarif_we_3n" />
                                </td>
                                <td align="center" bgcolor="#8BBE67">-</td>
                            </tr>
                            <tr>
                                <td>&nbsp;&nbsp; <span>WE de fête 4 nuits</span></td>
                                <td align="center" bgcolor="#ACE087">
                                     <span tal:content="heb/heb_tarif_we_4n" />
                                </td>
                                <td align="center" bgcolor="#8BBE67">-</td>
                            </tr>
                            <tr>
                                <td colspan="3">&nbsp;</td>
                            </tr>
                            <tr>
                                <td>&nbsp;&nbsp; <span>Fin d'année</span></td>
                                <td align="center" bgcolor="#ACE087">-</td>
                                <td align="center" bgcolor="#8BBE67">
                                     <span tal:content="heb/heb_tarif_semaine_fin_annee" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">&nbsp;</td>
                            </tr>
                            <tr bgcolor="#ceddce">
                                <td>&nbsp;&nbsp; <span>Garantie</span></td>
                                <td colspan="2" align="left">
                                    <span tal:content="heb/heb_tarif_garantie" />
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;&nbsp; <span>Charges</span></td>
                                <td colspan="2" align="left">
                                    <span tal:condition="exists: heb/heb_tarif_charge">|
                                    <span tal:content="heb/heb_tarif_charge" />
                                    <span tal:content="view/getHebergementCharge" />
                                    <br /></span>
                                    <span tal:condition="not: exists: heb/heb_tarif_charge">---</span>
                                </td>
                            </tr>
                            <tr bgcolor="#ceddce">
                                <td>&nbsp;&nbsp; <span>Taxe de séjour</span></td>
                                <td colspan="2" align="left">
                                    <span tal:content="heb/heb_taxe_montant" />
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;&nbsp; <span>Divers</span></td>
                                <td colspan="2" align="left">
                                    <span tal:content="heb/heb_tarif_divers" />
                                </td>
                            </tr>
                         </table>
                    </div>

                    <!--TABLE TARIFICATION CHAMBRE-->
                    <div tal:condition="python:heb.type.type_heb_code in 'CH, MH, CHECR'">
                        <table id="tarification-chambre">
                            <tr class="bg-chambre">
                                <td>&nbsp;</td>
                                <td align="center"><span>1 p.</span></td>
                                <td align="center"><span>2 p.</span></td>
                                <td align="center"><span>Personne supplémentaire</span></td>
                            </tr>
                            <tr>
                                <td class="bg-chambre">
                                    <span>Nuitée avec petit déjeuner</span>
                                </td>
                                <td align="center">
                                    <span tal:content="heb/heb_tarif_chmbr_avec_dej_1p" />
                                </td>
                                <td align="center">
                                    <span tal:content="heb/heb_tarif_chmbr_avec_dej_2p" />
                                </td>
                                <td align="center">
                                    <span tal:content="heb/heb_tarif_chmbr_avec_dej_3p" />
                                </td>
                            </tr>
                            <tr>
                                <td class="bg-chambre">
                                    <span>Déduction si pas de petit déjeuner</span>
                                </td>
                                <td align="center">
                                    <span tal:content="heb/heb_tarif_chmbr_sans_dej_1p" />
                                </td>
                                <td align="center" class="empty-cell">
                                    <span tal:content="heb/heb_tarif_chmbr_sans_dej_2p" />
                                </td>
                                <td align="center" class="empty-cell">
                                    <span tal:content="heb/heb_tarif_chmbr_sans_dej_3p" />
                                </td>
                            </tr>
                            <tr>
                                <td class="bg-chambre">
                                <span>Taxe de séjour</span>
                                </td>
                                <td align="center">
                                     <span tal:content="heb/heb_taxe_montant" />
                                </td>
                                <td align="center" class="empty-cell">&nbsp;</td>
                                <td align="center" class="empty-cell">&nbsp;</td>
                            </tr>
                            <tr>
                                <td class="bg-chambre">
                                <span>Divers</span>
                                </td>
                                <td align="center">
                                    <span tal:content="heb/heb_tarif_chmbr_autre_1p" />
                                </td>
                                <td align="center" class="empty-cell">
                                    <span tal:content="heb/heb_tarif_chmbr_table_hote_1p" />
                                </td>
                                <td align="center" class="empty-cell">&nbsp;</td>
                            </tr>
                        </table>
                    </div>

                    <!-- TABLE TABLE D'HOTE-->
                    <div>
                        <table id="tarification-chambre">
                           <tr align="center">
                              <td class="bg-chambre"><span>Table d'hôtes</span></td>
                              <td>
                              <span>
                                 <span>20.00</span>
                              </span>
                              </td>
                           </tr>
                           <tr align="center">
                              <td class="bg-chambre"><span>Type</span></td>
                              <td>
                              <span>
                                 <span>
                                       <img src="assiette_3.png"
                                            alt="Menu gastronomique"
                                            title="Menu gastronomique">
                                       <br />
                                 </span>
                              </span>
                              </td>
                           </tr>
                        </table>
                    </div>
                </li>

                <!-- DESCRIPTION -->
                <li class="slide2">
                    <div class="slide_handle"><div></div></div>
                    <div class="slide_content">
                        <h2>Description</h2>
                        <div style="display:table; table-layout:fixed;">
                            <div style="display: table-cell;">
                            <h3>Description</h3>
                            <br />
                            <span tal:content="view/getHebergementDescription" />
                            </div>
                            <div style="display: table-cell;">
                                <h3>Situation</h3>
                                <br />
                                <span tal:content="view/getHebergementSituation" />
                            </div>
                            <div style="display: table-cell;">
                                <h3>Distribution</h3>
                                <br />
                                <span tal:content="view/getHebergementDistribution" />
                                <br />
                                <tal:block define="metadata python:view.getAnimal()">
                                    <img src=""
                                       title=""
                                       alt=""
                                       tal:attributes="src string:${metadata/id}.png; alt metadata/title; title metadata/title"
                                       class="picto" />
                                </tal:block>
                                <tal:block define="metadata python:view.getFumeur()">
                                    <img src=""
                                       title=""
                                       alt=""
                                       tal:attributes="src string:${metadata/id}.png; alt metadata/title; title metadata/title"
                                       class="picto" />
                                </tal:block>
                                <tal:for repeat="metadata python:view.getHebMetadatasByType('confort')">
                                    <img src=""
                                       title=""
                                       alt=""
                                       tal:attributes="src string:${metadata/id}.png; alt metadata/title; title metadata/title"
                                       class="picto" />
                                </tal:for>
                            </div>
                        </div>
                    </div>
                </li>
                <!-- DISPONIBILITE -->
                <li class="slide3">
                  <div class="slide_handle"><div></div></div>
                    <div class="slide_content">
                        <h2>Disponibilité</h2>
                        <div>
                        </div>
                        <br />
                    </div>
                </li>
                <!-- PHOTOS -->
                <li class="slide4">
                    <div class="slide_handle"><div></div></div>
                    <div class="slide_content">
                        <h2>Photos</h2>
                        <div>
                          <tal:loop repeat="vignetteUrl view/getVignettesUrl">
                            <img src=""
                                 alt=""
                                 title=""
                                 tal:attributes="src string:photos_heb/${vignetteUrl}; alt context/heb_nom; title context/heb_nom"
                                 class="photo_gallery" />
                          </tal:loop>
                        </div>
                        <br />
                    </div>
                </li>
                <!-- LOCALISATION -->
                <li class="slide5">
                    <div class="slide_handle"><div></div></div>
                    <div class="slide_content">
                        <h2>Localisation</h2>
                        <div id="description-map" tal:content="structure provider:plone.belowcontentbody" />
                        <br />
                    </div>
                </li>
                <!-- CONTACT -->
                <li class="slide6">
                    <div class="slide_handle"><div></div></div>
                    <div class="slide_content">
                        <h2>Contact</h2>
                        <div>
                            <span tal:content="heb/proprio/civilite/civ_titre" />
                            <span tal:replace="heb/proprio/pro_prenom1" />
                            <span tal:replace="heb/proprio/pro_prenom2" />
                            <span tal:replace="heb/proprio/pro_nom1" />
                            <span tal:replace="heb/proprio/pro_nom2" />
                            <br />
                            <span tal:replace="heb/proprio/pro_langue" />
                            <br />
                            <img src="telephone.gif" />
                            <span tal:replace="heb/proprio/pro_tel_priv" />
                            <br />
                            <img src="fax.gif" />
                            <span tal:replace="heb/proprio/pro_fax_priv" />
                            <br />
                            <img src="gsm.gif" />
                            <span tal:replace="heb/proprio/pro_gsm1" />
                            <br />
                            <img src="email.gif" />
                            <span tal:replace="heb/proprio/pro_email" />
                            <br />
                            <span tal:condition="python: heb.proprio.pro_url!=''">
                            <img src="lien.gif" />
                            <a href=""
                               tal:attributes="href string: http://${heb/proprio/pro_url}"
                               tal:content="string: http://${heb/proprio/pro_url}"
                               target="_blank" />
                            </span>
                            <div>
                            <a href=""
                               tal:attributes="href string:${context/@@plone_portal_state/portal_url}/form_contact_proprio?heb_pk=${heb/heb_pk}">
                              <span>Contactez le propriétaire</span>
                            </a>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div><!--define-->

    </div>

</div><!--metal-->
</body>
</html>
