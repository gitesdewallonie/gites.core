<div id="main-header">
    <div id="logo">
        <a href="#"></a>
    </div>

    <div id="je-recherche">
        <h2 i18n:translate="je_cherche">Je cherche</h2>
        <h3><a href="#" i18n:translate="recherche_avancee">Recherche avancée</a></h3>
        <div class="break-float"></div>

        <form action="#"
              method="post">
            <div id="zone-gite-meuble">
                <input type="checkbox"
                       name="gite-meuble"
                       id="gite-meuble"
                       value=""
                       checked="checked"/>
                <label for="gite-meuble"
                       i18n:translate="gites_et_meubles">Gîtes et meublés</label>
            </div>
            <div id="zone-chambre-hote">
                <input type="checkbox"
                       name="chambre-hote"
                       id="chambre-hote"
                       value=""/>
                <label for="gite-meuble"
                       i18n:translate="chambre_hotes">Chambre d'hôtes</label>
            </div>
            <div class="break-float"></div>
            <div id="date-start">
                <input type="text"
                       size="9"
                       maxlength="8"
                       name="Date"
                       placeholder="Arrivée" />
            </div>
            <div id="date-end">
                <input type="text"
                       size="9"
                       maxlength="8"
                       name="Date"
                       placeholder="Départ" />
            </div>
            
            <div id="nbre-personne">
                <input type="text"
                       size="3"
                       maxlength="2"
                       name="Date"
                       value="" />
            </div>
            <div class="break-float"></div>
            <div id="proximite">
                <input type="text"
                       size="40"
                       maxlength="12"
                       name="Date"
                       placeholder="A proximité de">
            </div>

            <div>
                <input type="submit"
                       value="Trouver"
                       class="trouver"
                       i18n:translate="trouver" />
            </div>
        </form>
    </div><!--je cherche-->

    <div id="je-connais">
        <h2 i18n:translate="je_connais">Je connais</h2>
        <div class="break-float"></div>
        <form action="#"
              method="post">
            <div id="nom-reference">
                <label for="nom-reference" 
                       i18n:translate="nom_ou_reference">Nom ou référence</label>
                <input type="text"
                       id="nom-reference"
                       name="nom-reference"
                       value=""
                       size="30" />
            </div>
            <div>
                <input type="submit"
                       value="Trouver"
                       class="trouver"
                       i18n:translate="trouver" />
            </div>
        </form>
    </div><!--je connais-->

    <div id="je-decouvre">
        <h2 i18n:translate="je_decouvre">Je découvre</h2>
        <div class="break-float"></div>
        <div id="giteetmeuble"><a href="#"></a></div>
        <div id="maisonhote"><a href="#"></a></div>
    </div><!--je decouvre-->
    <div class="break-float"></div>
</div><!--main-header-->
