<div id="main-header">
    <div id="logo">
        <a href="#"></a>
    </div>

    <div id="je-recherche">
        <h2 id="RA">
            <a href="#"><span i18n:translate="recherche_avancee">Recherche avancée</span> <img src="img/puce-fleche.png" alt="puce-flêche"></a>
        </h2>
        <h3 i18n:translate="je_cherche">Je cherche</h3>
        <form action="#"
              method="post">
            <div id="gite-meuble">
            <input type="checkbox"
                   name="gite-meuble"
                   id="gite-meuble"
                   value=""
                   checked="checked"/>
                   <label for="gite-meuble"><span i18n:translate="gites_et_meubles">Gîtes et meublés</span></label>
            </div>

            <div id="chambre-hote">
            <input type="checkbox"
                   name="chambre-hote"
                   id="chambre-hote"
                   value=""/>
                   <label for="gite-meuble"><span i18n:translate="chambre_hotes">Chambre d'hôtes</span></label>
            </div>

            <div id="date-start">
                <input type="text"
                       size="9"
                       maxlength="8"
                       name="Date"
                       placeholder="Arrivée" />
            </div>
            <div id="date-end">
                <input type="text"
                       size="9"
                       maxlength="8"
                       name="Date"
                       placeholder="Départ" />
            </div>

            <div id="nbre-personne">
                <input type="text"
                       size="3"
                       maxlength="2"
                       name="Date"
                       value="" />
            </div>

            <div id="proximite">
                <input type="text"
                       size="40"
                       maxlength="12"
                       name="Date"
                       placeholder="A proximité de">
            </div>

            <div class="submit">
                <input type="submit" value="Trouver">
            </div>
        </form>
    </div><!--je cherche-->

    <div id="je-connais">
        <h1 i18n:translate="je_connais">Je connais</h1>
        <form action="#"
              method="post">
            <div id="nom-reference">
                <label for="nom-reference"><span i18n:translate="nom_ou_reference">Nom ou référence</span></label>
                <input type="text"
                       id="nom-reference"
                       name="nom-reference"
                       value=""
                       size="30" />
            </div>
            <div class="submit">
                <input type="submit" value="Trouver">
            </div>
        </form>
    </div><!--je connais-->

    <div id="je-decouvre">
        <h1 i18n:translate="je_decouvre">Je découvre</h1>
        <div id="giteetmeuble"><a href="#"></a></div>
        <div id="maisonhote"><a href="#"></a></div>
    </div><!--je decouvre-->
    <div class="break-float"></div>
</div><!--main-header-->
