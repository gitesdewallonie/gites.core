<div id="listing-result-block">
<div id="listing-result-batch">
    <a href=""
       tal:condition="not:viewlet/is_first_page"
       ng-click="goToPreviousPage()">Précédent</a>
    <tal:pages tal:repeat="page_number viewlet/pages">
        <a href=""
           tal:content="page_number"
           tal:attributes="ng-click string:goToPage(${page_number})" ng-click="goToPage(2)"/>
    </tal:pages>
    <a href=""
       tal:condition="not:viewlet/is_last_page"
       ng-click="goToNextPage()">Suivant</a>
</div>


<div id="sort">
    <select ng-model="sort" ng-change="updateSort()">
        <tal:sort tal:repeat="sort_item python:viewlet.sort_items().items()">
            <option value="" tal:attributes="value python:sort_item[0]" tal:content="python:sort_item[1]"/>
        </tal:sort>
    </select>
</div>

<div class="break-float"></div>


<div id="listing--result-count"
     i18n:translate="heb_count">
    Hébergement
    <span i18n:name="" tal:replace="viewlet/batch_start"/>
    à
    <span i18n:name="heb_number" tal:replace="viewlet/batch_end"/>
    sur un total de
    <span i18n:name="heb_number_total" tal:replace="viewlet/count"/>
</div>


<div class="hebergement-listing-detail"
     i18n:domain="gites"
     tal:repeat="hebergement viewlet/hebergements">
    <div id="typetype">
        <a href=""
           tal:attributes="href hebergement/@@url"
           tal:content="hebergement/type/getType"></a>
    </div>
    <div id="vignette"><img src="vignette.png" /></div>
    <div id="title" tal:content="hebergement/heb_nom"></div>
    <div id="type" tal:content="hebergement/type/getTitle"></div>
    <div id="commune" tal:content="hebergement/commune/com_nom"></div>
    <div id="capacite-max" tal:content="hebergement/heb_cgt_cap_max"></div>
    <div id="capacite-unite" i18n:translate="capacite-unite">personnes</div>

    <div id="chambre-nbre" tal:content="hebergement/heb_cgt_nbre_chmbre"></div>

    <div id="chambre-nbre-label" i18n:translate="chambre">chambres</div>

    <div id="epis" tal:repeat="epis hebergement/epis">
        <div id="epis-nbre" tal:content="epis/heb_nombre_epis"/>
        <div id="epis-nbre-label" i18n:translate="epis">epis</div>
    </div>

    <div id="icon-confort">
        <div id="icon-confort-dog" tal:condition="hebergement/accept_dogs">Wouf</div>
        <div id="icon-confort-smoker" tal:condition="hebergement/is_smoker">Fume</div>
    </div>
</div>
<div class="break-float"></div>
</div><!--listing-result-block-->
<div id="break-float"></div>



