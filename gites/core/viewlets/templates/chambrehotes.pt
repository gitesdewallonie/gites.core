<div id="zone-allo-chambre-hote"
     i18n:domain="gites"
     tal:define="lang request/LANGUAGE | en;
                 allo_lang python: lang in ['it', 'de'] and 'en' or lang">
    <h3>
        <a href="http://www.allochambredhotes.be"
           tal:attributes="href string:http://www.allochambredhotes.be?set_language=${allo_lang}"
           title="Allo chambre d'hôtes"
           target="_blank">
            Allo chambre d'hôtes
        </a>
    </h3>
    <div class="offre-icon">
        <a href="http://www.allochambredhotes.be"
           tal:attributes="href string:http://www.allochambredhotes.be?set_language=${allo_lang}"
           title="Allo chambre d'hôtes"
           target="_blank">
            <img src="++theme++gites.theme/images/allo_chbre_hote_qrcode.png"
                 height="156" width="240">
        </a>
    </div>
    <div class="break-float"></div>
    <div id="titre-promotion">
        <a href="http://www.allochambredhotes.be"
           tal:attributes="href string:http://www.allochambredhotes.be?set_language=${allo_lang}"
           title="Allo chambre d'hôtes"
           target="_blank"
           i18n:translate="allo_chambre_question">A la recherche d'une chambre d'hôtes pour cette nuit?</a>
    </div>
    <p>
        <span i18n:translate="allo_chambre_description">Avec Allo chambre d'hôtes, trouvez une chambre d'hôtes
        disponible ce soir à proximité de votre destination
        en Wallonie.</span>
    </p>
    <div class="plus-info info-chambre">
        <a href="http://www.allochambredhotes.be"
           tal:attributes="href string:http://www.allochambredhotes.be?set_language=${allo_lang}"
           target="_blank">
            <span i18n:translate="plus_dinfos">Plus d'infos</span>...
        </a>
    </div>
</div>
