<div id="main-header"
     i18n:domain="gites">
    <div id="logo">
        <a href=""
           tal:attributes="href string:${context/@@plone_portal_state/portal_url}"></a>
    </div>
    <!-- je-cherche -->
    <div tal:content="structure viewlet/form/render" />

    <div id="je-connais">
        <h2 i18n:translate="je_connais">Je connais</h2>
        <div class="break-float"></div>
        <form action=""
              method="post"
              tal:attributes="action string:${context/@@plone_portal_state/portal_url}/moteur_recherche_view/getHebergementByNameOrPk">
            <div id="nom-ou-reference">
                <label for="nom-reference"
                       i18n:translate="nom_ou_reference">Nom ou référence</label>
                <input type="text"
                       id="nom-reference"
                       name="reference"
                       value=""
                       tal:attributes="value python:request.form.get('reference')" />
            </div>
            <div>
                <input type="submit"
                       value="Je trouve"
                       class="trouver"
                       i18n:translate="trouver" />
            </div>
        </form>
    </div><!--je connais-->

    <div id="je-decouvre" tal:define="translate nocall:here/@@getTranslatedObjectUrl">
        <h2 i18n:translate="je_decouvre">Je découvre</h2>
        <div class="break-float"></div>
        <div id="gitemeuble"><a tal:attributes="href python:translate('type-hebergement')"><span i18n:translate="gites_et_meubles">Gites et meublés</span></a></div>
        <div id="maisonhote"><a tal:attributes="href python:translate('type-hebergement')"><span i18n:translate="chambre_hote">Chambre d'hôte</span></a></div>
    </div><!--je decouvre-->
    <div class="break-float"></div>
</div><!--main-header-->
