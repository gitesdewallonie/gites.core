<div id="zone-produit-package">
    <div id="zone-photo"
         tal:define="packages viewlet/getCarouselPackages">

        <div id="package-carousel" class="carousel slide" tal:condition="packages">
            <ol class="carousel-indicators">
              <tal:bcl tal:repeat="package packages">
                <li data-target="#package-carousel"
                    data-slide-to=""
                    class="active" tal:attributes="data-slide-to repeat/package/index"></li>
              </tal:bcl>
            </ol>
            <div class="carousel-inner">
              <tal:bcl tal:repeat="package packages">
                <div class=""
                     tal:define="index repeat/package/index"
                     tal:attributes="class python: int(index) == 0 and 'item active' or 'item'">
                    <a href=""
                       tal:attributes="href package/absolute_url">
                        <img src=""
                             tal:attributes="src string: ${package/absolute_url}/largePhoto">
                        <div class="carousel-caption">
                            <h4><span tal:replace="package/Title" /></h4>
                            <p><span tal:replace="package/Description" /></p>
                        </div>
                    </a>
                </div>
              </tal:bcl>
            </div>
            <a class="left carousel-control" href="#package-carousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#package-carousel" data-slide="next">&rsaquo;</a>
        </div>

        <div id="zone-packperm-membre">
              <div id="zone-package-permanent"
                   tal:define="translate nocall:here/@@getTranslatedObjectUrl">
                  <ul>
                      <li id="mice">
                          <a href="" i18n:translate="mice" tal:attributes="href python:translate('idee-sejour/mice')">MICE</a>
                      </li>
                      <li id="city-trip">
                          <a href="#" i18n:translate="city_trip" tal:attributes="href python:translate('idee-sejour/city-trip')">CITY-TRIP</a>
                      </li>
                      <li id="insolite">
                          <a href="#" i18n:translate="insolite" tal:attributes="href python:translate('idee-sejour/insolite')">INSOLITE</a>
                      </li>
                  </ul>
              </div>
              <div id="bouton-devenir-membre"
                   tal:define="translate nocall:here/@@getTranslatedObjectUrl">
                  <a href=""
                     tal:attributes="href string:XXX"
                     i18n:translate="devenir_membre">Devenir membre</a>
              </div>
              <div class="break-float"></div>
        </div>
    </div>
</div>
