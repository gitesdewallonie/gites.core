<?xml version="1.0"?>
<object name="IdeeSejour"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">IdeeSejour</property>
 <property name="description"></property>
 <property name="content_icon">folder.gif</property>
 <property name="content_meta_type">IdeeSejour</property>
 <property name="product">gites.core</property>
 <property name="factory">addIdeeSejour</property>
 <property name="immediate_view">idee_sejour_view</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">False</property>
 <property name="allow_discussion">False</property>
 <property name="default_view">idee_sejour_view</property>
 <property name="default_view_fallback">False</property>
 <property name="view_methods">
  <element value="idee_sejour_view"/>
 </property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="atct_edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>
 <action title="View" action_id="view" category="object"
    condition_expr="python:1" url_expr="string:${object_url}" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
    url_expr="string:${object_url}/edit" visible="True"
    i18n:attributes="title">
  <permission value="Modify portal content"/>
 </action>
 <action title="References" action_id="references" category="object"
    condition_expr="object/archetype_tool/has_graphviz"
    url_expr="string:${object_url}/reference_graph" visible="True">
  <permission value="Modify portal content"/>
  <permission value="Review portal content"/>
 </action>
</object>
